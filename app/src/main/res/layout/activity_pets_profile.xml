<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".petsProfile"
    android:background="@drawable/fon"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <ImageButton
            android:id="@+id/choosepets"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:onClick="choosepit" />
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_marginLeft="2dp"
           android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/idpets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/shape_2"
            android:hint="ID животного"
            android:inputType="textEmailAddress"
            android:padding="8dp"
            android:textAlignment="textStart"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/textFieldNamePets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_2"
            android:hint="Кличка животного"
            android:padding="8dp"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/textFieldAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_2"
            android:hint="Возраст животного"
            android:padding="8dp"
            android:textAlignment="textStart"
            android:textSize="15dp" />
    </LinearLayout>


    </LinearLayout>
    <EditText
        android:id="@+id/textFieldHaract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_2"
        android:hint="История животного"
        android:padding="8dp"
        android:textAlignment="textStart"
        android:textSize="15dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">
    <Button
        android:id="@+id/save_profile_pets"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/green"
        android:text="Сохранить"
        android:layout_marginLeft="7dp"
        android:textColor="@color/bejev"
        android:textSize="15dp"
        android:textStyle="italic"
        app:cornerRadius="15dp"
  />
    <Button
        android:id="@+id/pristroit"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/green"
        android:text="Пристроить"
        android:textColor="@color/bejev"
        android:textSize="14dp"
        android:textStyle="italic"
        android:layout_marginLeft="60dp"
        app:cornerRadius="15dp"/>
    </LinearLayout>

</LinearLayout>